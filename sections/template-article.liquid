<!-- Dynamic Image Tag Generation -->
{% if article.image %}
  <img class="post-feature-img" src="{{ article.image | image_url: 'large' }}" alt="{{ article.image.alt }}">
{% else %}
  <p>Error: Image not available</p>
{% endif %}
<img class="post-feature-img" src="{{ article.image.url | default: '' }}" alt="{{ article.image.alt | default: 'Alt Text' }}">

{{ article.image | inspect }}

<div class="container">
  <div class="jumbotron">
    <h1>{{ article.title }}</h1>
  </div>
  <p class="lead"> {{ article.content }} </p>
  <p>{{ article.author }}</p>
</div>

{% schema %}
{
  "name": "Section name",
  "settings": []
}
{% endschema %}
