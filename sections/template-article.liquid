{% capture article_content %}
  {{ article.content }}
{% endcapture %}

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">{{ article.title }}</h1>
      
      <div class="article-content">
        {{ article_content | remove: '<p>' | remove: '</p>' }}
      </div>
    </div>
  </div>
</div>

